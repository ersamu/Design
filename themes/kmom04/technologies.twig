{% include 'incl/header.twig' %}

<body>
    {% include 'incl/nav.twig' %}
    <div class="main">
        <div class="bold-text">
            {{ content }}
        </div>
        <div class="technology-container" role="main">
            {% for page in pages("technology") %}
                <a href="{{ page.url }}">
                <div class="technology">
                    <h1>{{ page.title }}</h1>
                    <div class="before-description">
                        {{ page.description }}
                    </div>
                </div>
                </a>
            {% endfor %}
        </div>
    </div>

    {% include 'incl/footer.twig' %}
</body>
